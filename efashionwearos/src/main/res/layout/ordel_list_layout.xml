<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="6dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/banner_background"
    android:backgroundTint="@color/white"
    android:elevation="8dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/oll_product_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/clothes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/oll_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:text="My Product"
        android:textColor="@color/black"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/oll_order_indicator"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginVertical="1dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oll_bill_number"
        app:srcCompat="@drawable/default_unselected_dot"
        app:tint="@color/starSelectedColor" />

    <TextView
        android:id="@+id/oll_order_delivery_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="1dp"
        android:layout_marginStart="5dp"
        android:text="Delivered on Mon, 2021-01-02"
        android:textColor="@color/black"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/oll_order_indicator"
        app:layout_constraintStart_toEndOf="@+id/oll_order_indicator"
        app:layout_constraintTop_toTopOf="@+id/oll_order_indicator" />

    <TextView
        android:id="@+id/cll_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="1dp"
        android:layout_marginStart="5dp"
        android:text="Order No:"
        android:textColor="@color/black"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oll_product_name" />

    <TextView
        android:id="@+id/oll_bill_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="1dp"
        android:layout_marginStart="5dp"
        android:text="98451514891wsqw1d1wq89"
        android:textColor="@color/black"
        android:textSize="8sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cll_product_price" />

</androidx.constraintlayout.widget.ConstraintLayout>

