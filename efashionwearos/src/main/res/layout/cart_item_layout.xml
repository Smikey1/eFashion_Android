<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/banner_background"
        android:backgroundTint="@color/white"
        android:elevation="8dp"
        android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/cll_product_image"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/clothes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cll_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="My Product"
            android:textColor="@color/black"
            android:textSize="8sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/cll_product_image"
            app:layout_constraintTop_toTopOf="@+id/cll_product_image" />

        <TextView
            android:id="@+id/cll_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:text="Rs. 1200.00"
            android:textColor="@color/black"
            android:textSize="8sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/cll_product_name"
            app:layout_constraintStart_toStartOf="@+id/cll_product_name"
            app:layout_constraintTop_toBottomOf="@+id/cll_product_name" />

        <TextView
            android:id="@+id/cll_cutted_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="1dp"
            android:layout_marginStart="8dp"
            android:text="Rs. 1200.00"
            android:textColor="@color/black"
            android:textSize="8sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/cll_product_price"
            app:layout_constraintStart_toEndOf="@+id/cll_product_price"
            app:layout_constraintTop_toTopOf="@+id/cll_product_price" />

        <TextView
            android:id="@+id/cll_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="1dp"
            android:layout_marginTop="6dp"
            android:text="Qty: 1"
            android:textColor="@color/black"
            android:textSize="9sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="@+id/cll_product_price"
            app:layout_constraintTop_toBottomOf="@+id/cll_product_price" />

        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/black"
            app:layout_constraintBottom_toBottomOf="@+id/cll_cutted_price"
            app:layout_constraintEnd_toEndOf="@+id/cll_cutted_price"
            app:layout_constraintStart_toStartOf="@+id/cll_cutted_price"
            app:layout_constraintTop_toTopOf="@+id/cll_cutted_price" />

    </androidx.constraintlayout.widget.ConstraintLayout>


