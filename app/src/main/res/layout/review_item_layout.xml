<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginVertical="5dp"
    android:background="@drawable/banner_background"
    android:elevation="8dp"
    android:orientation="horizontal"
    android:backgroundTint="#F6F5F5"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ril_Profile"
        android:scaleType="fitXY"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="5dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ril_fullname"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Handsome Boy"/>
        <LinearLayout
            android:id="@+id/reviewRatingContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ril_ratingStar1"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/star"
                app:tint="#C1BFBD"/>
            <ImageView
                android:id="@+id/ril_ratingStar2"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/star"
                app:tint="#C1BFBD"/>
            <ImageView
                android:id="@+id/ril_ratingStar3"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/star"
                app:tint="#C1BFBD"/>
            <ImageView
                android:id="@+id/ril_ratingStar4"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/star"
                app:tint="#C1BFBD"/>
            <ImageView
                android:id="@+id/ril_ratingStar5"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/star"
                app:tint="#C1BFBD"/>
        </LinearLayout>
        <TextView
            android:id="@+id/ril_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#616060"
            android:textStyle="italic"
            android:textSize="15sp"
            android:text="Heloajdlkasjdlkasjdajsasjdnaksdlas"/>
    </LinearLayout>
</LinearLayout>